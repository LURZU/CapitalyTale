$C = "CapitalyTale_Common.ui";

Group #BalanceRoot {
  Anchor: (Left: 0, Top: 0, Right: 0, Bottom: 0);
  LayoutMode: Center;

  Group #BalanceCard {
    Anchor: (Width: 320, Height: 280);
    Background: (Color: #0a1628ee);
    LayoutMode: Top;
    Padding: (Top: 0, Bottom: 20, Left: 20, Right: 20);
    OutlineColor: #1e3a5f;
    OutlineSize: 1;
    
    // === Header ===
    Group #Header {
      LayoutMode: Left;
      Background: (Color: #0d2040);
      Padding: (Top: 14, Bottom: 14, Left: 16, Right: 16);
      Anchor: (Left: -20, Right: -20, Height: 52, Bottom: 30);
      
      TextButton #BackButton {
        Text: "←";
        Style: $C.@CtButtonGhostStyle;
        Anchor: (Width: 32, Height: 32, Vertical: 0);
      }
      
      Label #Title {
        Text: "Account Balance";
        Style: (FontSize: 16, TextColor: #00D4FF, RenderBold: true, HorizontalAlignment: Center);
        FlexWeight: 1;
        Anchor: (Vertical: 0);
      }
      
      Group #HeaderSpacer {
        Anchor: (Width: 32, Height: 32);
      }
    }
    
    // === Balance Display ===
    Group #BalanceSection {
      LayoutMode: Top;
      
      Label #BalanceLabel {
        Text: "Available Balance";
        Style: (FontSize: 12, TextColor: #8899aa, HorizontalAlignment: Center);
        Anchor: (Bottom: 12);
      }
      
      Group #BalanceValueRow {
        LayoutMode: Left;
        Anchor: (Height: 50, Bottom: 16);
        
        Label { FlexWeight: 1; }
        
        Label #CurrencySymbol {
          Text: "$";
          Style: (FontSize: 28, TextColor: #00FF88, RenderBold: true);
          Anchor: (Vertical: 0, Right: 6);
        }
        
        Label #BalanceValue {
          Text: "0.00";
          Style: (FontSize: 42, TextColor: #00FF88, RenderBold: true);
          Anchor: (Vertical: 0);
        }
        
        Label { FlexWeight: 1; }
      }
      
      // Account Info
      Group #AccountInfoBox {
        LayoutMode: Left;
        Background: (Color: #122035);
        Padding: (Top: 12, Bottom: 12, Left: 16, Right: 16);
        Anchor: (Height: 50);
        OutlineColor: #1e3a5f;
        OutlineSize: 1;
        
        Label #AccountLabel {
          Text: "Account Status";
          Style: (FontSize: 11, TextColor: #556677);
          FlexWeight: 1;
          Anchor: (Vertical: 0);
        }
        
        Label #StatusBadge {
          Text: "● Active";
          Style: (FontSize: 11, TextColor: #00FF88, RenderBold: true);
          Anchor: (Vertical: 0);
        }
      }
    }
    
    // === Spacer ===
    Group #Spacer {
      FlexWeight: 1;
    }
    
    // === Back Button ===
    Group #ActionSection {
      LayoutMode: Top;
      
      TextButton #CloseButton {
        Text: "BACK TO MENU";
        Style: $C.@CtButtonSecondaryStyle;
        Anchor: (Height: 40);
      }
    }
  }
}
